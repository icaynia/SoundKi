<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/contentBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:background="@drawable/view_card">

        <RelativeLayout
            android:id="@+id/titlebox"
            android:layout_marginLeft="6dp"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <ImageView
                android:id="@+id/titleIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="7dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:paddingBottom="2dp"
                android:textColor="#efffff"
                android:textSize="14dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/titleIcon"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/content"
            android:layout_below="@id/titlebox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/buttonBox"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:visibility="gone"
            android:gravity="center_vertical">

            <LinearLayout
                android:id="@+id/buttonImageBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/buttonImage"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>

            </LinearLayout>


            <TextView
                android:id="@+id/buttonTitleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/buttonImageBox"
                android:gravity="center_horizontal"
                android:text="vdsdvsdv"
                android:textColor="#efffff"
                android:textSize="16dp"/>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>